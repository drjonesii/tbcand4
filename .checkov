# Checkov configuration file
# See https://www.checkov.io/3.Custom%20Policies/CLI%20Arguments.html for more options

# Skip specific checks that might be too strict for your environment
skip-check:
  - CKV_AWS_24   # Skip SSH access check (not applicable)
  - CKV_AWS_126  # Skip CloudWatch Log Group retention (already set in code)
  - CKV_AWS_130  # Skip public IP assignment for public subnets (intentional)
  - CKV2_AWS_62  # Skip S3 event notifications (not required for these buckets)
  - CKV2_AWS_61  # Skip S3 lifecycle configuration (not required for these buckets)
  - CKV2_AWS_16  # Skip DynamoDB autoscaling (low-traffic state locking table)

# Framework to scan
framework:
  - terraform

# Output format
output: cli

# Soft fail (don't exit with error code if there are findings)
soft-fail: false

# Skip specific paths
skip-path:
  - "test/*"  # Skip test files
  - "*.tfvars"  # Skip variable files that might contain sensitive data

# Include specific paths
include-path:
  - "modules/*"  # Include all modules
  - "*.tf"  # Include all Terraform files in the root directory 